<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_set_marker"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <ImageView
        android:id="@+id/marker_details_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_marker_info"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/marker_details_icon"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_location_name"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/info_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <EditText
        android:id="@+id/marker_details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/name_text"
        android:layout_alignLeft="@+id/info_text"
        android:layout_alignStart="@+id/info_text"
        android:layout_alignRight="@+id/info_text"
        android:layout_alignEnd="@+id/info_text" />

    <TextView
        android:id="@+id/phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_location_contact"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/marker_details_name"
        android:layout_alignLeft="@+id/name_text"
        android:layout_alignStart="@+id/name_text" />

    <EditText
        android:id="@+id/marker_details_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/phone_text"
        android:layout_alignLeft="@+id/marker_details_name"
        android:layout_alignStart="@+id/marker_details_name"
        android:layout_alignRight="@+id/marker_details_name"
        android:layout_alignEnd="@+id/marker_details_name" />

    <Button android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/marker_details_phone"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
